import { H2, Image, Icon } from "@ui";
---

<header class="header">
  <div class="header__inner container">
    <a href="/" class="header__logo" title="logo">
      <Image src="logo.svg" alt="logo" />
    </a>

    <nav class="header__menu">
      <ul class="menu">
        <li class="menu-item"><a href="/" title="Главная">Главная</a></li>
        <li class="menu-item"><a href="/tours" title="Туры">Туры</a></li>
        <li class="menu-item"><a href="/about" title="О нас">О нас</a></li>
        <li class="menu-item"><a href="/reviews" title="Отзывы">Отзывы</a></li>
        <li class="menu-item">
          <a href="/contacts" title="Контакты">Контакты</a>
        </li>
      </ul>
    </nav>

    <div class="header__right">
      <div class="header__langs">
        <a href="#" class="underline" title="Русский">Ru</a>
        <a href="#" class="underline" title="English">En</a>
        <a href="#" class="underline" title="汉语">汉语</a>
      </div>

      <div class="header__contacts">
        <a
          href="tel:+79211766669"
          class="header__contacts-phone"
          title="Телефон"
        >
          +7 (921) 176-66-69
        </a>
        <a
          href="mailto:samsara.tour51@yandex.ru"
          class="header__contacts-email"
          title="E-mail"
        >
          samsara.tour51@yandex.ru
        </a>
      </div>

      <div class="header__socials">
        <a href="#" title="Вконтакте">
          <Icon src="vk.svg" />
        </a>
        <a href="#" title="Telegram">
          <Icon src="telegram.svg" />
        </a>
        <a href="#" title="Whatsapp">
          <Icon src="whatsapp.svg" />
        </a>
      </div>
    </div>
  </div>

